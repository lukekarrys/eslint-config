{
  "extends": "./eslintrc.json",

  "parser": "espree",

  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "node": true
  },

  "rules": {
    "no-invalid-this": 2
  }
}
